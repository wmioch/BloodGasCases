{
  "name": "bloodgas-generator",
  "version": "0.1.0",
  "description": "Physiologically-accurate blood gas value generator for medical education",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --outfile=dist/bloodgas.js --format=iife --global-name=BloodGas",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "blood gas",
    "ABG",
    "medical education",
    "simulation",
    "physiology",
    "acid-base"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0"
  }
}

